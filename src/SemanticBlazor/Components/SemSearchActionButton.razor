@inherits SemInputControlBase<string>

@if (Visible)
{
  <SemActionInput Value="Value" ValueChanged="ValueChanged" OnClick="SearchClicked" ActionText="@SearchActionText" Clearable="true" 
                  ButtonIcon="Icon.Search" OnClickLoading="true" Style="@Style" Class="@Class" @attributes="Attributes" Enabled="@Enabled"></SemActionInput>
}

@code {
  [Parameter] public string SearchActionText { get; set; } = "Search";
  [Parameter] public EventCallback<object> OnSearch { get; set; }

  private async Task SearchClicked()
  {
    await OnSearch.InvokeAsync(null);
  }
}